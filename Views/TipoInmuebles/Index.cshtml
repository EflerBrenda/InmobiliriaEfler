@model IEnumerable<InmobiliariaEfler.Models.TipoInmueble>

@{
    ViewData["Title"] = "Ver tipos de inmueble";
}

<h1>Tipos de Inmueble</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Detalles", "Details", new { id=item.Id })
                        @if (User.IsInRole("Administrador"))
                        {
                            <label>|</label>
                            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
                        }
                    </td>
                </tr>
            }

        }
        else
        {
            <td class="text-center" colspan="1">Todavia no hay tipos de Inmueble registrados, <a
                asp-action="Create">Presione
                    aqu√≠ para crear uno.</a></td>
        }
    </tbody>
</table>
